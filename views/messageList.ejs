<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%=title%></title>
	</head>
	<body>
		<% extend("layout")%>
		<h1>Messages:</h1>
		<%if(currentUser){%> <%if(messages){%>
		<ul>
			<%messages.forEach(function(message){%>
			<li>
				<h2>Title: <%=message.title%></h2>
				<h3>Message:</h3>
				<p><%=message.text%></p>
				<%if(user.membership === true){%>
				<p><%=message.time_stamp%></p>
				<p><%=message.user.fullName%></p>
				<%}%> <%if(user.admin === true){%>
				<form action="/messages/<%=message._id%>/delete" method="post">
					<button type="submit">Delete Message</button>
				</form>
				<%}%>
			</li>
		</ul>
		<%})}else{%>
		<p>There are no messages currently</p>
		<a href="/messages/create">Write the first one!</a>
		<%}}else{%>
		<p>Please log in to view messages.</p>
		<%}%>
	</body>
</html>
